<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
    	<%= render 'layouts/errors', errors: @book %>
  		<%= form_with model:@book, url: book_path, local:true do |f| %>
  　　　　<div class="form-group">
    　　　<%= f.label :title, class: 'control-label' %>
    　　<%= f.text_field :title, class: 'col-md-12' %>
  　　　　</div>
  　　　　<div class="form-group">
    　　<%= f.label :body, 'Opinion', class: 'control-label' %>
    　　<%= f.text_area :body, class: 'col-md-12' %>
  　　　　</div>
  　　　　<div class="form-group">
    　　<%= f.submit class: 'btn btn-success' %>
  　　</div>
　　<% end %>
  		<%= link_to 'Show', book_path(@book), class: "book_#{@book.id}" %> |
  		<%= link_to 'Back', books_path, class: "back" %>
  </div>
</div>